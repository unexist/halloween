    -# Form
    .row
        .col-md-12
            %table.table{id: "comments"}
                %tr
                    %td Name:
                    %td{colspan: 2}
                        %input.input-lg.space{id: "name", type: "text", tabindex: 1}
                %tr
                    %td Kommentar:
                    %td{colspan: 2}
                        %textarea{id: "comment", rows: 2, tabindex: 2}
                %tr
                    %td Ich komme..
                    %td
                        %input{id: "submit", class: "dingbats", type: "button", value: "..vollkommen klar", tabindex: 3}
                %tr{id: "ghosts"}
                    %td{colspan: 3}
                        #list.d-flex.flex-row.flex-wrap
                            -# Ghosts
                            - @ghosts.each do |ghost|
                                %div
                                    %span{class: 'dingbats icon'}= ghost.name[0] rescue "A"
                                    %span= ghost.name
                -# Ghosts
                - @ghosts.each do |ghost|
                    - unless ghost.comment.nil? or ghost.comment.empty?
                        %tr
                            %td.comment{colspan: 3}
                                %span.name= ghost.name
                                %span.text= ghost.comment
